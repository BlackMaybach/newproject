<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigBoldTitle">
        <item name="android:textColor">@color/anotherBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TinyText">
        <item name="android:textColor">@color/anotherGray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MicroText">
        <item name="android:textColor">@color/anotherGray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonYellow">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="ButtonYellowOutline">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PhoneET">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/anotherGray</item>
        <item name="android:textColor">@color/anotherGray</item>
        <item name="android:textColorHint">@color/anotherGray</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NormalBoldTitle">
        <item name="android:textColor">@color/anotherBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalTitle">
        <item name="android:textColor">@color/anotherBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/anotherBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NormalYellowTitle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>